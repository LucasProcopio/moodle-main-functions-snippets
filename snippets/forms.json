{
  "Moodle Form add header element": {
    "prefix": ["$mfah", "$mfaddHeader"],
    "body": "\\$mform->addElement(${1:'header'}, ${2:\\$name}, ${3:\\$string});",
    "description": "Add a moodle form Header."
  },
  "Moodle Form add a element": {
    "prefix": ["$mform->addElement", "$mfae"],
    "body": "\\$mform->addElement(${1:\\$element}, ${2:\\$name}, ${3:\\$string});",
    "description": "Add an moodle form element."
  },
  "Moodle Form add action buttons": {
    "prefix": ["$mfaddButtons", "$mfab"],
    "body": "\\$this->add_action_buttons(${1:false}, ${2:\\$string});",
    "description": "Add an moodle form action buttons."
  },
  "Moodle Form add a set of elements": {
    "prefix": ["$mform->Add", "$mfaset"],
    "body": [
      "\\$mform->addElement(${1:\\$element}, ${2:\\$name}, ${3:\\$string});",
      "\\$mform->setType(${2:\\$name}, ${4:PARAM_TYPE});",
      "\\$mform->addRule(${2:\\$name}, ${3:\\$string}, ${5:'required'}, ${6:null}, ${7:'server'});",
      "\\$mform->addHelpButton(${2:\\$name}, ${2:\\$name}, ${8:\\$pluginname});"
    ],
    "description": "Add a complete moodle form element with type,rule and help button"
  }
}
